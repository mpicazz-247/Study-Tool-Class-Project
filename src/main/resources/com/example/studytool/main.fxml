<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="612.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studytool.mainController">
   <children>
      <Label fx:id="timerLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="1.0" layoutY="52.0" prefHeight="96.0" prefWidth="287.0" text="00:00" textAlignment="CENTER">
         <font>
            <Font name="Cambria Math" size="81.0" />
         </font>
      </Label>
      <HBox layoutX="63.0" layoutY="148.0" prefHeight="49.0" prefWidth="158.0" spacing="5.0">
         <children>
            <Button fx:id="startStopButton" mnemonicParsing="false" onAction="#startStopTimer" style="-fx-background-radius: 20; -fx-background-color: green;" text="Start" />
            <Button fx:id="skipButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#skipButton" style="-fx-background-radius: 20; -fx-background-color: green;" text="Skip" />
            <Button fx:id="resetButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#resetTimer" style="-fx-background-radius: 20; -fx-background-color: green;" text="Reset" />
         </children>
      </HBox>
      <Label alignment="CENTER" layoutX="66.0" layoutY="176.0" prefHeight="49.0" prefWidth="158.0" text="Repetitions:  " textAlignment="CENTER">
         <font>
            <Font name="Cambria Math" size="17.0" />
         </font>
      </Label>
      <HBox layoutX="24.0" layoutY="33.0" prefHeight="35.0" prefWidth="242.0">
         <children>
            <RadioButton fx:id="mode25_5" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="35.0" prefWidth="124.0" text="25/5">
               <font>
                  <Font name="Cambria Math" size="24.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="mode50_10" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="35.0" prefWidth="122.0" text="50/10">
               <font>
                  <Font name="Cambria Math" size="24.0" />
               </font>
            </RadioButton>
         </children>
      </HBox>
      <ComboBox fx:id="repetitionSelector" layoutX="69.0" layoutY="215.0" prefWidth="150.0" />
      <VBox layoutX="288.0" layoutY="48.0" prefHeight="306.0" prefWidth="306.0" spacing="10.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="307.0" style="-fx-background-radius: 20;" text="Add" />
            <HBox prefHeight="29.0" prefWidth="306.0" spacing="5.0">
               <children>
                  <Button fx:id="toggleButton" mnemonicParsing="false" onAction="#toggleButton" style="-fx-background-radius: 20; -fx-background-color: green; -fx-cursor: blue;" text="Toggle" />
                  <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeButton" style="-fx-background-radius: 20; -fx-background-color: green; -fx-cursor: blue;" text="Delete" />
                  <TextField fx:id="taskInput" prefHeight="26.0" prefWidth="181.0" text="Enter Task" />
               </children>
            </HBox>
            <ListView fx:id="taskListView" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
